<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gelen_messageRequest_item_imgProfil"
            android:layout_width="77dp"
            android:layout_height="77dp"
            app:civ_border_color="#037EB6"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/gelen_messageRequest_item_txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/gelen_messageRequest_item_linear"
            android:layout_toRightOf="@id/gelen_messageRequest_item_imgProfil"
            android:text="X kullanıcısı sana amesaj göndermek istiyor"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:id="@+id/gelen_messageRequest_item_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gelen_messageRequest_item_imgCancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                app:tint="#037EB6"></ImageView>

            <ImageView
                android:id="@+id/gelen_messageRequest_item_imgOkay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_check"
                app:tint="#037EB6"></ImageView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>