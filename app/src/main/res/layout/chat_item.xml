<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_item_imgUserProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="5dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/chat_item_txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/chat_item_imgRight"
            android:layout_toRightOf="@+id/chat_item_imgUserProfile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/chat_item_txtEndMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/chat_item_txtUserName"
            android:layout_toLeftOf="@+id/chat_item_imgRight"
            android:layout_toRightOf="@+id/chat_item_imgUserProfile"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/chat_item_imgRight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right"></ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>